<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <NumberPicker
        android:id="@+id/AgePickerYears"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="71dp" />

    <NumberPicker
        android:id="@+id/AgePickerMonths"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="21dp"
        android:layout_toRightOf="@+id/AgePickerYears" />

    <TextView
        android:id="@+id/Months_Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Years_Label"
        android:layout_alignBottom="@+id/Years_Label"
        android:layout_alignLeft="@+id/AgePickerMonths"
        android:text="@string/months_label"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/Years_Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/AgePickerYears"
        android:layout_below="@+id/AgePickerYears"
        android:layout_marginLeft="16dp"
        android:text="@string/years_label"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>